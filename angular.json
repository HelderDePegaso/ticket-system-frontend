{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ticket-system-frontend": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/ticket-system-frontend",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public",
                "output": "assets"
              }
            ],
            "styles": [
              "src/styles.css",
              "public/materials-dashboard/css/material-dashboard.css",
              "public/materials-dashboard/scss/material-dashboard.scss"
            ],
            "scripts": [
              "public/materials-dashboard/js/material-dashboard.min.js", 
              "public/materials-dashboard/js/core/popper.min.js",
              "public/materials-dashboard/js/core/bootstrap.min.js",
              "public/materials-dashboard/js/plugins/chartjs.min.js",
              "public/materials-dashboard/js/plugins/perfect-scrollbar.min.js",
              "public/materials-dashboard/js/plugins/smooth-scrollbar.min.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ticket-system-frontend:build:production"
            },
            "development": {
              "buildTarget": "ticket-system-frontend:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public",
                "output": "assets"
              }
            ],
            "styles": [
              "src/styles.css",
              "public/materials-dashboard/css/material-dashboard.css",
              "public/materials-dashboard/scss/material-dashboard.scss"
            ],
            "scripts": [
              "public/materials-dashboard/js/core/popper.min.js",
              "public/materials-dashboard/js/core/bootstrap.min.js",
              "public/materials-dashboard/js/material-dashboard.min.js",
              "public/materials-dashboard/js/plugins/chartjs.min.js",
              "public/materials-dashboard/js/plugins/perfect-scrollbar.min.js",
              "public/materials-dashboard/js/plugins/smooth-scrollbar.min.js"

            ]
          }
        }
      }
    },
    "super-angular-lib": {
      "projectType": "library",
      "root": "projects/super-angular-lib",
      "sourceRoot": "projects/super-angular-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/super-angular-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/super-angular-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/super-angular-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/super-angular-lib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  }
}
